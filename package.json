{
  "name": "focus-reader",
  "private": true,
  "packageManager": "pnpm@10.6.2",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "db:migrate": "pnpm --filter @focus-reader/db run migrate",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "tsx": "^4.21.0",
    "turbo": "^2",
    "typescript": "^5"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "workerd",
      "sharp"
    ]
  }
}
